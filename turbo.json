{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "typecheck": {},
    "lint:publint": {},
    "test": {
      "outputs": ["coverage/**"],
      "env": ["DEBUG"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    }
  }
}
