{
  "name": "@mqueue/multicast",
  "version": "1.0.0",
  "type": "module",
  "description": "MQueue adapter for multi-backend publishing and subscribing",
  "author": "Dom Webber <dom.webber@hotmail.com>",
  "contributors": [
    "Dom Webber <dom.webber@hotmail.com>"
  ],
  "engines": {
    "node": ">=20"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "queue",
    "mqueue"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/domwebber/mqueue",
    "directory": "packages/multicast"
  },
  "scripts": {
    "build": "tsup src/index.ts --no-config --dts --format esm --cjsInterop --minify --sourcemap --splitting --treeshake",
    "typecheck": "tsc --noEmit",
    "test": "node --import tsx --test --test-reporter=spec tests/**/*.test.ts tests/*.test.ts",
    "lint:publint": "publint"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "provenance": false
  },
  "peerDependencies": {
    "@mqueue/queue": "workspace:*"
  },
  "devDependencies": {
    "@mqueue/queue": "workspace:*",
    "@mqueue/null": "workspace:*",
    "publint": "^0.3.12",
    "testcontainers": "^11.5.0",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  }
}
